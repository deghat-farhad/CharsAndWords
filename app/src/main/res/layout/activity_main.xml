<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViwTenthChar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:hint="@string/txtViwTenthCharHint"
        android:padding="2dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="txtViwTenthChar" />

    <Button
        android:id="@+id/btnFire"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="@string/btnFireText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pgrsBarTenthChar"
        style="?android:attr/progressBarStyle"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtViwTenthChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtViwTenthChar" />

    <TextView
        android:id="@+id/txtViwEvery10thChar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:hint="@string/every_10th_character"
        android:maxLines="12"
        android:padding="2dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViwTenthChar"
        tools:text="txtViwEvery10thChar" />

    <ProgressBar
        android:id="@+id/pgrsBarEvery10thChar"
        style="?android:attr/progressBarStyle"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtViwEvery10thChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtViwEvery10thChar" />


    <TextView
        android:id="@+id/txtViwWordCounter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="96dp"
        android:background="@android:color/darker_gray"
        android:hint="@string/word_counter"
        android:maxLines="12"
        android:padding="2dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViwEvery10thChar"
        tools:text="txtViwWordCounter" />

    <ProgressBar
        android:id="@+id/pgrsBarWordCounter"
        style="?android:attr/progressBarStyle"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtViwWordCounter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtViwWordCounter" />

</androidx.constraintlayout.widget.ConstraintLayout>